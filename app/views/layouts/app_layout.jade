doctype html
html
	head
		meta(charset='utf-8')
		meta(name="viewport", content='width=device-width, initial-scale=1.0')
		script(src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js")
		script(src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js")
		link(rel="stylesheet", href="//ajax.googleapis.com/ajax/libs/jqueryui/1.8.9/themes/base/jquery-ui.css" type="text/css" media="all")
		script(src="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.1/js/bootstrap.min.js")
		script(src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/js/bootstrap-datepicker.js")
		link(href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/css/bootstrap-datepicker.css" rel="Stylesheet")
		script(type="text/javascript", src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-switch/3.3.2/js/bootstrap-switch.min.js")
		link(rel="stylesheet" type="text/css", href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-switch/3.3.2/css/bootstrap3/bootstrap-switch.min.css")
		link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/jstree/3.2.1/themes/default/style.min.css")
		script(src="https://cdnjs.cloudflare.com/ajax/libs/jstree/3.2.1/jstree.min.js")
		link(href="//cdn.datatables.net/1.10.12/css/jquery.dataTables.min.css" rel="stylesheet" type="text/css")
		script(src="//cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js" type="text/javascript")
		script(type="text/javascript", src="/javascripts/jquery.colorbox.js")
		link(rel="stylesheet", href="/stylesheets/colorbox.css")
		link(rel="stylesheet", href="/stylesheets/Site.css")
		script(src="/javascripts/Site.js")
		title TWEC Test | #{title}
		block head
    
	body
		#app
			nav(class="navbar navbar-inverse")
				.container
					.navbar-header
						button(type="button", class="navbar-toggle", data-toggle="collapse" data-target=".navbar-collapse")
							span.icon-bar
							span.icon-bar
							span.icon-bar
						a(class="navbar-brand", href="/")
							p TWEC Test
					div(class="navbar-collapse collapse")
						
			.container
				div(class="row" id="header-content")
					.col-md-12
						.media
							div(class="media-left media-top")
								if typeof(pageimage) !== 'undefined'
									a(href="#{pageimage}", class="colorbox_img", rel="colorbox", title="#{title}")
										img(class="media-object", src="#{pageimage}", alt="#{title}", width="150")
								else
									a(href="javascript:;")
										img(class="media-object", src="/images/q block.png", alt="#{title}")
							.media-body
								h2(class="media-heading") #{title}
								if typeof(subtitle) !== 'undefined'
									h5
										!= subtitle
								if typeof(details) !== 'undefined'
									p
										!= details
								if typeof(links) !== 'undefined'
									- var idx = 0;
									each link in links
										if idx > 0
											&nbsp;|&nbsp;
										a(href="#{link.url}", target="#{link.target}") #{link.text}
										- idx += 1;
				#body_container
					block content
				hr
				footer
					p
						&copy; #{new Date().getFullYear()}
